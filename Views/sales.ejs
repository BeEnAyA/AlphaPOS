      <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">SALES</h1>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <% for (let i=0; i < product.length; i +=4) { %>
            <div class="row">
              <% for (let j=i; j < i + 4 && j < product.length; j++) { %>
                <div class="col-md-3 mb-4" style="max-width: 250px;">
                  <div class="card" style="height: 300px;">
                    <img src="<%= product[j].image %>" class="card-img-top" alt="Product Image"
                      style="max-height: 150px;">
                    <div class="card-body" style="padding: 10px;">
                      <h6 class="card-title" style="font-size: 1rem;">
                        <%= product[j].name %>
                      </h6>
                      <p class="card-text" style="font-size: 0.8rem;">Unit Price: $<%= product[j].unitPrice %>
                      </p>
                      <p class="card-text" style="font-size: 0.8rem;">Available Quantity: <%= product[j].quantity %>
                      </p>
                      <div class="input-group mb-2">
                        <input type="number" class="form-control" style="font-size: 0.8rem;" placeholder="Quantity"
                          id="quantity_<%= product[j].id %>">
                        <div class="input-group-append">
                          <button class="btn btn-sm btn-primary" style="font-size: 0.8rem;"
                            onclick="addToCart('<%= product[j].id %>', '<%= product[j].name %>', '<%= product[j].unitPrice %>')">Add
                            to Cart</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>
            </div>
            <% } %>
        </div><!-- /.container-fluid -->
      </section>



      <div class="invoice-section">
        <div class="card"
          style="position: fixed; top: 30px; right: 0; width: 250px; height: 88.5vh; overflow-y: auto; background-color: #f8f9fa; border-left: 1px solid #ddd; padding: 20px; box-shadow: -5px 0px 10px rgba(0, 0, 0, 0.1);">
          <div class="card-header">
            Invoice
          </div>
          <div class="card-body invoice-items">
            <!-- display itenms in cart/invoice here -->
          </div>
          <hr style="border: 1px solid #ccc; margin-top: 10px; margin-bottom: 10px;">

          <div class="total-display" style="font-weight: bold; margin-top: 10px;">Total: $0.00</div>
          <div class="discount-display" style="font-weight: bold; margin-top: 5px;">Discount: 0%</div>
          <div class="final-total-display" style="font-weight: bold; margin-top: 5px;">Final Total: $0.00</div>
          <button class="btn btn-primary btn-block" style="margin-top: 10px;">Generate Invoice</button>
        </div>
      </div>
    </div>
  </div>


  <!-- /.content -->
