  <!-- ChartJS -->
  <script src="/plugins/chart.js/Chart.min.js"></script>
  <!-- Sparkline -->
  <script src="/plugins/sparklines/sparkline.js"></script>
  <!-- JQVMap -->
  <script src="/plugins/jqvmap/jquery.vmap.min.js"></script>
  <script src="/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
  <!-- jQuery Knob Chart -->
  <script src="/plugins/jquery-knob/jquery.knob.min.js"></script>
  <!-- daterangepicker -->
  <script src="/plugins/moment/moment.min.js"></script>
  <script src="/plugins/daterangepicker/daterangepicker.js"></script>
  <!-- Tempusdominus Bootstrap 4 -->
  <script src="/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
  <!-- Summernote -->
  <script src="/plugins/summernote/summernote-bs4.min.js"></script>
  <!-- overlayScrollbars -->
  <script src="/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dist/js/adminlte.js"></script>


  <script>
    var totalInvoicePrice = 0; // initial total price
    var discountPercent = 7; // initial discont price

    function addToCart(productId, productName, productPrice) {
      var quantityInput = document.getElementById('quantity_' + productId);
      var quantity = parseInt(quantityInput.value);

      if (isNaN(quantity) || quantity <= 0) {
        alert('Please enter a valid quantity.');
        return;
      }

      var totalPrice = productPrice * quantity;
      totalInvoicePrice += totalPrice; // total invoice price before discount is deducted

      var invoiceItem = `
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
      <span style="font-weight: bold; color: blue;">${productName}</span>
      <span style="display: flex; align-items: center;">
        $${totalPrice.toFixed(2)}
        <i class="fas fa-tag" style="color: #999; margin-left: 5px;"></i>
      </span>
    </div>
    `;

      var invoiceItemContainer = document.querySelector('.invoice-items');
      invoiceItemContainer.insertAdjacentHTML('beforeend', invoiceItem);

      // Update and display total invoice price
      var totalDisplay = document.querySelector('.total-display');
      totalDisplay.textContent = `Total: ${totalInvoicePrice.toFixed(2)}`;

      // for discount 
      var discountAmount = (totalInvoicePrice * discountPercent) / 100;
      var discountDisplay = document.querySelector('.discount-display');
      discountDisplay.textContent = `Discount: ${discountPercent}%`;

      // sum after discount is given
      var finalTotal = totalInvoicePrice - discountAmount;
      var finalTotalDisplay = document.querySelector('.final-total-display');
      finalTotalDisplay.textContent = `Final Total: $${finalTotal.toFixed(2)}`;

      // Clear quantity input after adding to the invoice
      quantityInput.value = '';
    }
  </script>


</body>

